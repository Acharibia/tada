{
  "name": "@achabs/tada",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight toast notification library",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "toast",
    "notification",
    "alert",
    "popup",
    "message",
    "snackbar"
  ],
  "author": "Achabs <marshallacharibia@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Acharibia/tada.git"
  },
  "bugs": {
    "url": "https://github.com/Acharibia/tada/issues"
  },
  "homepage": "https://github.com/Acharibia/tada#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.1",
    "@vitest/ui": "^4.0.4",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "rollup": "^4.27.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.4"
  }
}
